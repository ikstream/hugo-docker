name: Docker

on:
  schedule:
    - cron: '0 23 * * */7'
  workflow_dispatch:

env:
  IMAGE_NAME: hugo

jobs:
  push:
    runs-on: ubuntu-latest
    if: github.event_name == 'push'

    steps:
      - uses: actions/checkout@v2
      
      - name: Get current date
        id: date
        run: echo "::set-output name=date::$(date +'%Y-%m-%d')"

      - name: Build image
        run: docker build . --file Dockerfile --tag docker.io/ikstream/$IMAGE_NAME-${{ steps.date.outputs.date }}:latest

      - name: Log into registry
        uses: docker/login-action@v1
        with:
          username: ${{ secrets.DOCKER_USER }}
          password: ${{ secrets.DOCKER_HUB_TOKEN }}

      - name: Push image
        run: |
          docker push docker.io/ikstream/$IMAGE_NAME-${{ steps.date.outputs.date }}:latest
